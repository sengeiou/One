<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="setting_text_userinfo_left_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:textColor">@color/setting_tv_center_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="setting_text_userinfo_right_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/setting_icon_right_arrow</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>