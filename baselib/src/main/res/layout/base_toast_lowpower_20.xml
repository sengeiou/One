<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_25"
    android:paddingEnd="@dimen/dp_25"
    android:paddingTop="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_20"
    android:background="@drawable/circle_boder"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_low_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/base_lowpower_20"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_lowpower"
        android:layout_gravity="center_horizontal"
        android:textColor="#FF1D3740"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_15"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_lowpower_20"
        android:layout_gravity="center_horizontal"
        android:textColor="#FF62717A"
        android:textSize="10sp"
        />
</LinearLayout>