<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoTitleTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textColor">@color/sec_login_txt_main</item>
        <item name="android:textColorHint">@color/sec_login_txt_disc</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NoTitleThemeFullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textColor">@color/sec_login_txt_main</item>
        <item name="android:textColorHint">@color/sec_login_txt_disc</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>