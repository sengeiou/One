<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_126"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_action_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86">

        <ImageView
            android:id="@+id/iv_action_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_yoga"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/iv_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/play_action_item_rect"
            android:padding="@dimen/dp_4"
            android:scaleType="fitXY"
            android:alpha="0.3"
            android:visibility="invisible"
            />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/iv_play_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playing_motion_white"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/iv_play_pause_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/img_playing_white"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/iv_select_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pic_disselect"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_action_time"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_15"
            android:textSize="@dimen/dp_10"
            android:textColor="@android:color/white"
            android:text="03:12"
            android:gravity="center"
            android:background="@drawable/img_time_bg"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_4"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_action_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_playlist_title"
        android:text="The deer and the lion"
        android:layout_below="@+id/rl_action_icon"
        android:layout_marginTop="@dimen/dp_6"
        android:paddingLeft="@dimen/dp_6"
        android:maxLines="2"
        />


</RelativeLayout>