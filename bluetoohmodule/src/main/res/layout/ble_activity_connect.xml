<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg"
    tools:context="com.ubt.en.alpha1e.ble.activity.FirstGreetActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ble_buletooth_device_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bleImageview5"
        app:layout_constraintTop_toBottomOf="@+id/bleImageview5">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back"/>

    <ImageView
        android:id="@+id/bleImageview4"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fragmentation_help"/>

    <TextView
        android:id="@+id/bleTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_53"
        android:text="@string/ble_connect_bluetoh_title"
        android:textColor="@color/base_tv_large_black"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/bleTextview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/ble_connect_bluetoh_content"
        android:textColor="@color/base_tv_middle_gray1"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@+id/bleTextview"
        app:layout_constraintStart_toStartOf="@+id/bleTextview"
        app:layout_constraintTop_toBottomOf="@+id/bleTextview"/>

    <ImageView
        android:id="@+id/bleImageview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bleTextview2"
        app:srcCompat="@drawable/img_loading"/>
</android.support.constraint.ConstraintLayout>
