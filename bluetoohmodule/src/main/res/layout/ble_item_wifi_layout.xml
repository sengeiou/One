<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_80"
                android:background="@null"
                android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_25"
        android:background="@color/base_line"
        />

    <ImageView
        android:id="@+id/ig_robot_head"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_25"
        android:src="@drawable/img_robot_avatar"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_toRightOf="@id/ig_robot_head"
        android:gravity="center"
        android:textColor="@color/base_tv_large_black"
        android:textSize="@dimen/sp_15"/>

    <ImageView
        android:id="@+id/iv_wifi_sign"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@drawable/ble_wifi_sign"
        />



</RelativeLayout>