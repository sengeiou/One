<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <Button
        android:id="@+id/ble_bluetooth_guide_start_robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginTop="10dp"
        android:text="关闭"/>

    <Button
        android:id="@+id/ble_button_next"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text=" 机器人已经开机站立"
        android:textColor="#666666"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="请按ON/OFF键3-5秒,让机器人开机站立"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/bleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ble_button_next"
        android:layout_marginStart="138dp"
        android:layout_marginTop="76dp"
        android:layout_toEndOf="@+id/ble_bluetooth_guide_start_robot"
        android:text="Button"/>

</RelativeLayout>