<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_get_code_style">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/tv_login_user_edit_color</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="text_userinfo_left_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:textColor">@color/tv_login_center_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_userinfo_right_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/icon_login_right_arrow</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:textColor">@color/tv_login_blue_color</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>